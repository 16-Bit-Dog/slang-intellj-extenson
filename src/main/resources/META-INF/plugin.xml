<idea-plugin>
    <id>slanglsp</id>

    <name>Slang [Unofficial]</name>

    <vendor email="aglasroth@gmail.com">16-Bit-Dog</vendor>

    <description>
        <![CDATA[
        <p>Slang [Unofficial] is a plugin that provides Slang language support for IntelliJ platforms. This plugin is not an official Slang plugin.</p>
        <p>To use this plugin have the latest vulkan-sdk inside your PATH (this program searches for slangd/slangd.exe within the path).</p>
        ]]>
    </description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.redhat.devtools.lsp4ij</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.parameterInfo
                language="Slang"
                implementationClass="com.redhat.devtools.lsp4ij.features.signatureHelp.LSPParameterInfoHandler"/>

        <lang.psiStructureViewFactory language="Slang"
                                      implementationClass="com.redhat.devtools.lsp4ij.features.documentSymbol.LSPDocumentSymbolStructureViewFactory"/>

        <notificationGroup id="Slang LSP"
                           displayType="BALLOON"/>
    </extensions>

    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <server id="slangLanguageServer"
                name="Slang Language Server"
                factoryClass="slanglsp.SlangLanguageServerFactory">
            <description><![CDATA[
        Slang Language Server.
        ]]>
            </description>
        </server>

        <fileNamePatternMapping patterns="*.slang"
                                serverId="slangLanguageServer"
                                languageId="slang"/>
    </extensions>

</idea-plugin>